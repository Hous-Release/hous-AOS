<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="hous.release.android.presentation.our_rules.type.SaveButtonState" />

        <variable
            name="vm"
            type="hous.release.android.presentation.our_rules.edit_rule.OurRuleEditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hous_white"
        tools:context=".presentation.our_rules.add_rule.OurRuleAddFragment">

        <TextView
            android:id="@+id/tv_edit_rule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="11dp"
            android:text="@string/our_rule_edit_rule_title"
            android:textAppearance="@style/B1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_edit_rule_back_button"
            app:layout_constraintTop_toTopOf="@id/iv_edit_rule_back_button" />

        <ImageView
            android:id="@+id/iv_edit_rule_back_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="11dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/iv_add_rule_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="@{vm.uiState.saveButtonState == SaveButtonState.ACTIVE}"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="@string/our_rule_save_new_rule"
            android:textAppearance="@style/B1"
            android:textColor="@{vm.uiState.saveButtonState == SaveButtonState.ACTIVE ? @color/hous_blue : @color/hous_g_5}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_edit_rule_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_edit_our_rules"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_rule_title"
            tools:itemCount="19"
            tools:listitem="@layout/item_our_rules_general_rule" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>