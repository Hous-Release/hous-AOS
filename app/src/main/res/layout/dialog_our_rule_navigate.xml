<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_our_rule_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="22dp"
        android:paddingBottom="17dp"
        android:text="@string/our_rule_add"
        android:theme="@style/B2"
        android:textColor="@color/hous_blue"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <View
        android:id="@+id/view_division1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hous_g_line"
        app:layout_constraintTop_toBottomOf="@id/tv_our_rule_add" />

    <TextView
        android:id="@+id/tv_our_rule_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="17dp"
        android:text="@string/our_rule_edit"
        android:theme="@style/B2"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/view_division1"
        tools:layout_editor_absoluteX="16dp" />

    <View
        android:id="@+id/view_division2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hous_g_line"
        app:layout_constraintTop_toBottomOf="@id/tv_our_rule_edit" />

    <TextView
        android:id="@+id/tv_our_rule_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="25dp"
        android:text="@string/our_rule_delete"
        android:theme="@style/B2"
        android:textColor="@color/hous_red"
        app:layout_constraintTop_toBottomOf="@id/view_division2"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>