<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_fill_8_rect"
    android:paddingBottom="20dp"
    tools:context=".presentation.our_rules.add_rule.OurRuleAddOutDialogFragment">

    <TextView
        android:id="@+id/tv_our_rule_add_out_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/our_rule_add_out_title"
        android:textAppearance="@style/H4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_our_rule_add_out_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/our_rule_add_out_description"
        android:textAppearance="@style/HousDialogDiscription"
        app:layout_constraintStart_toStartOf="@id/tv_our_rule_add_out_title"
        app:layout_constraintTop_toBottomOf="@id/tv_our_rule_add_out_title" />

    <TextView
        android:id="@+id/tv_our_rule_add_continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/our_rule_add_continue_button_msg"
        android:textAppearance="@style/B2"
        android:textColor="@color/hous_g_6"
        app:layout_constraintEnd_toStartOf="@id/tv_our_rule_add_out_btn"
        app:layout_constraintTop_toBottomOf="@id/tv_our_rule_add_out_description" />

    <TextView
        android:id="@+id/tv_our_rule_add_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:text="@string/our_rule_add_out_button_msg"
        android:textAppearance="@style/B2"
        android:textColor="@color/hous_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_our_rule_add_out_description" />

</androidx.constraintlayout.widget.ConstraintLayout>