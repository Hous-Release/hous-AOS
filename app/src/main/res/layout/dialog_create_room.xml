<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_fill_8_rect"
        android:paddingBottom="26dp"
        tools:context=".presentation.enter_room.create_room.CreateRoomDialogFragment">

        <ImageButton
            android:id="@+id/btn_create_room_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/create_room_close_img_desc"
            android:padding="16dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_create_room_dialog"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/create_room_dialog_img_desc"
            android:src="@drawable/ic_create_room_graphic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_create_room_dialog_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/crate_room_dialog_desc"
            android:textColor="@color/hous_g_6"
            android:theme="@style/B1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_create_room_dialog" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_room_dialog_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/hous_g_2"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            android:paddingVertical="10dp"
            android:stateListAnimator="@null"
            android:text="@string/create_room_dialog_invite"
            android:textColor="@color/hous_black"
            android:theme="@style/B1"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_create_room_dialog_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
